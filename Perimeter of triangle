import java.util.*;


public class PerimeterOfTriangle {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        float A1 = sc.nextInt();
        float A2 = sc.nextInt();
        float A3 = sc.nextInt();
        float sum = A1+A2+A3;
        System.out.println("perimeter of a triangle is: " +sum );

        float pi = (float) Math.PI;
        float r= sc.nextFloat();
        float circle= (2*pi*r);
        System.out.println("circumference of a circle is :"+ circle);

        float area = pi*(r*r);
        System.out.println("The area of a circle is :"+ area);

    }
}
